<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lynx.Views.StatsDetailPage"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             BackgroundColor="Black"
             xmlns:lang="clr-namespace:Lynx.Resources.Languages"
             Shell.TabBarIsVisible="False"
             Shell.BackgroundColor="Black"
             Shell.ForegroundColor="White"
             
           >
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center"> 
        <Label Text="{x:Static lang:AppResources.Soon}" TextColor="White" Margin="5"  FontSize="Large" HorizontalOptions="Center"  FontAttributes="Bold"/>
        <skia:SKLottieView  
                 Source="soon.json"
                 RepeatCount="-1"
                 RepeatMode="Reverse"
                 WidthRequest="300"
                 HeightRequest="550"/>

    </VerticalStackLayout>
</ContentPage>