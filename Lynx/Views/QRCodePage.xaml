<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lynx.Views.QRCodePage"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:vm="clr-namespace:Lynx.ViewModels"
             x:DataType="vm:BarcodeViewModel"
             BindingContext="{vm:BarcodeViewModel}"
             Title="QRCodePage">
    <VerticalStackLayout>
        <cv:BarcodeImage 
            BarcodeMargin="5"
            WidthRequest="400" 
            HeightRequest="400"
            Background="green" 
            BarcodeHeight="400" 
            BarcodeWidth="400"
            BarcodeFormat="QR_CODE"
            Barcode="{Binding BarCodeContent}"
            />

        <cv:CameraView x:Name="camV" 
                    WidthRequest="300"
                    HeightRequest="200"
                    BarCodeOptions="{Binding BarCodeOptions}"
                    BarCodeResults="{Binding BarCodeResults, Mode=OneWayToSource}"
                    BarCodeDetectionEnabled="True"
                    /> 

        <Label Text="{Binding BarcodeText}" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center" />
    </VerticalStackLayout>
    
</ContentPage>