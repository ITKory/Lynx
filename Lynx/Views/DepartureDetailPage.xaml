<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lynx.Views.DepartureDetailPage"
             xmlns:vm="clr-namespace:Lynx.ViewModels"
             x:DataType="vm:DepartureDetailViewModel"
             xmlns:model="clr-namespace:Domain.Models;assembly=Domain"
             BindingContext="{vm:DepartureDetailViewModel}"
             Title="DepartureDetailPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding SelectedDeparture.Id}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Join departure" Command="{Binding JoinDepartureCommand}"/>
    </VerticalStackLayout>
</ContentPage>